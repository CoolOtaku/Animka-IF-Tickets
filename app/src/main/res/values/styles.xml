<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorButton</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:itemBackground">@color/colorBlue</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorBlue</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="EditText">
        <item name="android:textColorHint">@color/colorButton</item>
        <item name="android:background">@drawable/style_edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">@color/colorButton</item>
    </style>

</resources>